<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#2EC365</item>
        <item name="colorPrimaryDark">#196535</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/norm_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="textViewStyle.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewStyle.Subtitle">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin</item>
    </style>

    <style name="buttonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textSize">@dimen/norm_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_width">@dimen/edit_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>
</resources>