<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/colorPrimary</item>
        <item name="elevation">@dimen/space_four</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/norm_text_size</item>
        <item name="android:padding">@dimen/space_three</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_margin">@dimen/space_three</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="textViewStyle.Title">
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewStyle.Subtitle">
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewError" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="buttonStyle" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:padding">@dimen/space_three</item>
        <item name="android:layout_margin">@dimen/space_three</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="buttonStyle.Ave">
        <item name="android:background">@drawable/button_background_ave</item>
    </style>

    <style name="buttonStyle.Important">
        <item name="android:background">@drawable/button_background_important</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textSize">@dimen/norm_text_size</item>
        <item name="android:layout_width">@dimen/edit_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="textLayoutEdit" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="hintEnabled">false</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:layout_margin">@dimen/space_three</item>
        <item name="colorError">@android:color/holo_red_light</item>
    </style>

    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:checked">false</item>
        <item name="android:layout_margin">@dimen/space_three</item>
        <item name="android:textSize">@dimen/norm_text_size</item>
        <item name="android:padding">@dimen/space_ten</item>
    </style>

    <style name="spinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/space_four</item>
        <item name="android:layout_marginEnd">@dimen/space_four</item>
        <item name="android:paddingTop">@dimen/space_four</item>
        <item name="android:paddingBottom">@dimen/space_four</item>
        <item name="layout_constraintHorizontal_bias">0</item>
        <item name="android:background">@drawable/spinner_selected_background</item>
        <item name="android:popupBackground">@drawable/edit_text_shape</item>
    </style>
</resources>