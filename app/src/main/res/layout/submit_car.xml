<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.example.carsandbids.submit_car.SubmitCarViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:layout_editor_absoluteX="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--    Title: TELL US ABOUT YOU CAR-->
                <TextView
                    android:id="@+id/submit_title_text"
                    android:fontFamily="@font/roboto"
                    android:textSize="@dimen/title_size"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/space_ten"
                    android:layout_marginEnd="@dimen/space_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_title_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/submit_title_descript"
                    android:fontFamily="@font/roboto"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/norm_text_size"
                    android:layout_marginStart="@dimen/space_ten"
                    android:layout_marginEnd="@dimen/space_ten"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/submit_title_descript"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_title_text" />
                <!--    Section: Your info-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/submit_info_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:background="@drawable/submit_constraint_background"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/space_three"
                    android:paddingTop="@dimen/space_three"
                    android:paddingEnd="@dimen/space_three"
                    android:paddingBottom="6sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_title_descript">


                    <ImageView
                        android:id="@+id/submit_info_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="@dimen/space_three"
                        android:layout_marginBottom="@dimen/space_three"
                        android:paddingTop="@dimen/space_three"
                        android:paddingStart="@dimen/space_three"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/space_three"
                        android:src="@drawable/submit_car_tab"
                        app:layout_constraintEnd_toStartOf="@id/submit_your_info_subtitle"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/submit_your_info_subtitle"
                        style="@style/textViewStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_constraint_background"
                        android:text="@string/submit_your_info_subtitle"
                        app:layout_constraintBaseline_toBaselineOf="@+id/submit_info_tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/submit_info_tab"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!--    Dealer or private party?-->
                    <TextView
                        android:id="@+id/submit_who_is_selling"
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_who_is_selling"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_your_info_subtitle" />


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_dealer_radio_group"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/submit_who_is_selling"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <RadioButton
                            android:id="@+id/submit_radio_dealer"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/submit_dealer_button"
                            android:onClick="@{() -> viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_radio_private"
                            android:background="@drawable/radio_selector"
                            style="@style/radioButtonStyle"
                            android:text="@string/submit_private_button"
                            android:onClick="@{() -> viewModel.onButtonClick()}"/>
                    </RadioGroup>

                    <!--    Your name           ....        Contact Phone Number-->
                    <!--    Your name-->


                    <TextView
                        android:id="@+id/submit_your_name_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_your_name_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_dealer_radio_group" />

                    <EditText
                        android:id="@+id/submit_name_edit"
                        style="@style/editTextStyle"
                        android:inputType="textCapWords"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_your_name_text" />

                    <!--    Contact Phone Number-->

                    <TextView
                        android:id="@+id/submit_phone"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_phone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline_info"
                        app:layout_constraintTop_toBottomOf="@+id/submit_dealer_radio_group" />


                    <EditText
                        android:id="@+id/submit_phone_edit"
                        style="@style/editTextStyle"
                        android:inputType="phone"
                        app:layout_constraintBaseline_toBaselineOf="@+id/submit_name_edit"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline_info" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--    Section: Car Details-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/submit_car_details_contraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:background="@drawable/submit_constraint_background"
                    android:paddingStart="@dimen/space_three"
                    android:paddingTop="@dimen/space_three"
                    android:paddingEnd="@dimen/space_three"
                    android:paddingBottom="6sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_info_constraint">


                    <ImageView
                        android:id="@+id/submit_detail_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_three"
                        android:layout_marginTop="4dp"
                        android:paddingStart="@dimen/space_three"
                        android:paddingTop="@dimen/space_three"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/space_three"
                        android:src="@drawable/submit_car_tab"
                        app:layout_constraintEnd_toStartOf="@+id/submit_car_details_subtitle"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/submit_car_details_subtitle"
                        style="@style/textViewStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/space_ten"
                        android:text="@string/submit_car_details_subtitle"
                        app:layout_constraintBaseline_toBaselineOf="@+id/submit_detail_tab"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/submit_detail_tab"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--    Is car for sale elsewhere?-->
                    <TextView
                        android:id="@+id/submit_forsale_where"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_forsale_where"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_car_details_subtitle" />


                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_sale_elsewhere_group"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/submit_forsale_where"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <RadioButton
                            android:id="@+id/submit_sale_elsewhere_yes_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/yes"
                            android:onClick="@{()-> viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_sale_elsewhere_no_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/no"
                            android:onClick="@{()-> viewModel.onButtonClick()}"/>


                    </RadioGroup>

                <!--   Year (no earlier than 1980)-->
                    <TextView
                        android:id="@+id/submit_year_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/year"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_sale_elsewhere_group" />

                    <Spinner
                        android:id="@+id/submit_year_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_year_text"
                        tools:listitem="@tools:sample/cities" />

                    <!--    Make and Model-->
                    <!--    Make-->
                    <TextView
                        android:id="@+id/submit_make_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/make"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_year_spinner" />

                    <EditText
                        android:id="@+id/submit_make_edit"
                        style="@style/editTextStyle"
                        android:inputType="textCapWords"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_make_text" />

                    <!--    Model-->
                    <TextView
                        android:id="@+id/submit_model_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/model"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline_detail"
                        app:layout_constraintTop_toBottomOf="@+id/submit_year_spinner" />

                    <EditText
                        android:id="@+id/submit_model_edit"
                        style="@style/editTextStyle"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline_detail"
                        app:layout_constraintTop_toBottomOf="@+id/submit_model_text" />

                    <!--    Vin and Mileage-->
                    <!--    Vin-->

                    <TextView
                        android:id="@+id/submit_vin_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/vin"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_make_edit" />

                    <!--    Mileage-->
                    <EditText
                        android:id="@+id/submit_vin_edit"
                        style="@style/editTextStyle"
                        android:inputType="textCapCharacters"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_vin_text" />

                    <TextView
                        android:id="@+id/submit_mileage_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/mileage"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline_detail"
                        app:layout_constraintTop_toBottomOf="@+id/submit_model_edit" />

                    <EditText
                        android:id="@+id/submit_mileage_edit"
                        style="@style/editTextStyle"
                        android:inputType="number"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guideline_detail"
                        app:layout_constraintTop_toBottomOf="@+id/submit_mileage_text" />

                    <!--    Where is car located (Options of US and Canada-->

                    <TextView
                        android:id="@+id/submit_car_location"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/car_location"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_vin_edit" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_car_location_group"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/submit_car_location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <RadioButton
                            android:id="@+id/submit_car_location_us_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/united_states"
                            android:onClick="@{() -> viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_car_location_can_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/canada"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                    </RadioGroup>

                    <!--    Noteworthy Options/Features-->

                    <TextView
                        android:id="@+id/submit_things_to_note"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_things_to_note"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_car_location_group" />

                    <EditText
                        android:id="@+id/submit_noteworthy_edit"
                        style="@style/editTextStyle"
                        android:layout_width="250dp"
                        android:layout_height="75dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_things_to_note"
                        />

                    <!--    Has it been modified? (Completely Stock, or Modified)-->
                    <TextView
                        android:id="@+id/submit_been_modified_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/has_it_been_modified"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_noteworthy_edit" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/submit_modified_group"
                        app:layout_constraintTop_toBottomOf="@id/submit_been_modified_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">


                        <RadioButton
                            android:id="@+id/submit_stock_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/completely_stock"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_modified_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/modified"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                    </RadioGroup>

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/submit_title_info_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:paddingStart="@dimen/space_three"
                    android:paddingTop="@dimen/space_three"
                    android:paddingEnd="@dimen/space_three"
                    android:paddingBottom="6sp"
                    android:background="@drawable/submit_constraint_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_car_details_contraint">


                    <ImageView
                        android:id="@+id/submit_title_info_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_three"
                        android:layout_marginTop="4dp"
                        android:paddingStart="@dimen/space_three"
                        android:paddingTop="@dimen/space_three"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/space_three"
                        android:src="@drawable/submit_car_tab"
                        app:layout_constraintEnd_toStartOf="@+id/submit_info_title_subtitle"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--    Section: Title Info-->
                    <TextView
                        android:id="@+id/submit_info_title_subtitle"
                        style="@style/textViewStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_info"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/submit_title_info_tab"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/submit_title_info_tab"/>

                    <!--    Where is car titled? US or CAN-->
                    <TextView
                        android:id="@+id/submit_title_location"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/car_title_location"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_info_title_subtitle" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_car_titled_radio"
                        app:layout_constraintTop_toBottomOf="@id/submit_title_location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/submit_title_location_us_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/united_states"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_title_location_can_radio"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/canada"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>
                    </RadioGroup>
                    <!--    Is vehicle title in your name?-->
                    <TextView
                        android:id="@+id/submit_title_in_whos_name"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_in_your_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/submit_car_titled_radio" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_title_whos_name_group"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/submit_title_in_whos_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <RadioButton
                            android:id="@+id/submit_title_whos_name_radio_yes"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/yes"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_title_whos_name_radio_no"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/no"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>
                    </RadioGroup>

                    <!--    is there a lienholder on the title-->
                    <TextView
                        android:id="@+id/submit_lienholder_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/submit_lienholder_on_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/submit_title_whos_name_group" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/submit_lienholder_group"
                        android:orientation="horizontal"
                        app:layout_constraintTop_toBottomOf="@id/submit_lienholder_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <RadioButton
                            android:id="@+id/submit_lienholder_radio_yes"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/yes"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_lienholder_radio_no"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/no"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>
                    </RadioGroup>

                    <!--    What is the title's status-->
                    <TextView
                        android:id="@+id/submit_title_status_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/titles_status_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_lienholder_group" />

                    <Spinner
                        android:id="@+id/submit_title_status_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/submit_title_status_text"
                        tools:listitem="@tools:sample/cities" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/submit_reserve_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:paddingStart="@dimen/space_three"
                    android:paddingTop="@dimen/space_three"
                    android:paddingEnd="@dimen/space_three"
                    android:paddingBottom="6sp"
                    android:background="@drawable/submit_constraint_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_title_info_constraint">

                    <ImageView
                        android:id="@+id/submit_reserve_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_three"
                        android:layout_marginTop="4dp"
                        android:paddingStart="@dimen/space_three"
                        android:paddingTop="@dimen/space_three"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/space_three"
                        android:src="@drawable/submit_car_tab"
                        app:layout_constraintEnd_toStartOf="@+id/submit_reserve_subtitle"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--    Section: Reserve Price-->
                    <TextView
                        android:id="@+id/submit_reserve_subtitle"
                        style="@style/textViewStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reserve_price"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/submit_reserve_tab"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@id/submit_reserve_tab"/>
                    <!--    Do you want a min price to sell?-->
                    <TextView
                        android:id="@+id/submit_reserve_a_price_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ask_for_reserve_yn"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/submit_reserve_subtitle" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/submit_reserve_group"
                        app:layout_constraintTop_toBottomOf="@id/submit_reserve_a_price_text"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <RadioButton
                            android:id="@+id/submit_reserve_radio_yes"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/yes"
                            android:onClick="@{()->viewModel.onButtonClick()}"/>

                        <RadioButton
                            android:id="@+id/submit_reserve_radio_no"
                            style="@style/radioButtonStyle"
                            android:background="@drawable/radio_selector"
                            android:text="@string/no"
                            android:onClick="@{()-> viewModel.onButtonClick()}"/>
                    </RadioGroup>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/submit_photos_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:paddingStart="@dimen/space_three"
                    android:paddingTop="@dimen/space_three"
                    android:paddingEnd="@dimen/space_three"
                    android:paddingBottom="6sp"
                    android:background="@drawable/submit_constraint_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_reserve_constraint">

                    <ImageView
                        android:id="@+id/submit_photos_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_three"
                        android:layout_marginTop="4dp"
                        android:paddingStart="@dimen/space_three"
                        android:paddingTop="@dimen/space_three"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/space_three"
                        android:src="@drawable/submit_car_tab"
                        app:layout_constraintEnd_toStartOf="@+id/submit_photos_subtitle"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--    Section: Photos-->
                    <TextView
                        android:id="@+id/submit_photos_subtitle"
                        style="@style/textViewStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/photos"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/submit_photos_tab"
                        app:layout_constraintBaseline_toBaselineOf="@id/submit_photos_tab"
                        app:layout_constraintTop_toTopOf="parent" />
                    <!--    8 to 16 photos can be uploaded-->

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/submit_referral_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_ten"
                    android:paddingStart="@dimen/space_three"
                    android:paddingTop="@dimen/space_three"
                    android:paddingEnd="@dimen/space_three"
                    android:paddingBottom="6sp"
                    android:background="@drawable/submit_constraint_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_photos_constraint"
                    >

                    <ImageView
                        android:id="@+id/submit_referral_tab"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/space_three"
                        android:layout_marginTop="4dp"
                        android:paddingStart="@dimen/space_three"
                        android:paddingTop="@dimen/space_three"
                        android:paddingEnd="0dp"
                        android:paddingBottom="@dimen/space_three"
                        android:src="@drawable/submit_car_tab"
                        app:layout_constraintEnd_toStartOf="@+id/submit_referral_subtitle"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--    Section: Referral-->
                    <TextView
                        android:id="@+id/submit_referral_subtitle"
                        style="@style/textViewStyle.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/referral"
                        android:textSize="@dimen/subtitle_size"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/submit_referral_tab"
                        app:layout_constraintBaseline_toBaselineOf="@id/submit_referral_tab"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!--    How did you hear about us? If user referred, name them-->
                    <TextView
                        android:id="@+id/submit_referral_text"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/referral_text"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/submit_referral_subtitle" />

                    <EditText
                        android:id="@+id/submit_referral_edit"
                        style="@style/editTextStyle"
                        android:layout_width="300dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/submit_referral_text" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--            Submit Button-->
                <Button
                    android:id="@+id/submit_submit_button"
                    style="@style/buttonStyle.Important"
                    android:layout_margin="@dimen/space_ten"
                    android:text="@string/submit"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/submit_referral_constraint" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_ten"
                    android:id="@+id/submit_end_space"
                    app:layout_constraintTop_toBottomOf="@id/submit_submit_button"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>